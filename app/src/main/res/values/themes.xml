<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RideCellAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="styleEditTextNormal" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/drawable_edit_text_black_border</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:padding">@dimen/dimen_12</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>

    </style>

    <style name="tvLoginLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>




    <style name="blueButtonRounded" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/dimen_56</item>
        <item name="android:background">@drawable/drawable_button_blue_background</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="bottomNavBarColor">
        <item name="android:background">@color/purple_700</item>
    </style>


</resources>